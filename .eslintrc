{
  "parser": "vue-eslint-parser",
  "extends": ["airbnb-base", "plugin:gridsome/recommended", "plugin:prettier/recommended"],
  "rules": {
    "import/extensions": ["error", "ignorePackages", { "js": "never", "vue": "never" }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".json", ".vue"]
      },
      "alias": {
        "map": [
            ["@", "./src"]
        ],
        "extensions": [".js", ".json", ".vue"]
      }
    }
  }
}
